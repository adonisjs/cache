{
  "name": "@adonisjs/cache",
  "description": "Official caching module for AdonisJS framework",
  "version": "1.0.0-0",
  "engines": {
    "node": ">=18.16.0"
  },
  "main": "build/index.js",
  "type": "module",
  "files": [
    "build/configure.js",
    "build/configure.d.ts",
    "build/index.js",
    "build/index.d.ts",
    "build/factories",
    "build/providers",
    "build/services",
    "build/commands",
    "build/src",
    "build/stubs"
  ],
  "exports": {
    ".": "./build/index.js",
    "./types": "./build/src/types.js",
    "./commands/*": "./build/commands/*.js",
    "./commands": "./build/commands/main.js",
    "./services/main": "./build/services/main.js",
    "./cache_provider": "./build/providers/cache_provider.js"
  },
  "scripts": {
    "clean": "del-cli build",
    "copy:templates": "copyfiles \"stubs/**/*.stub\" build",
    "typecheck": "tsc --noEmit",
    "index:commands": "adonis-kit index build/commands",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "quick:test": "node --enable-source-maps --loader=ts-node/esm bin/test.ts",
    "pretest": "npm run lint",
    "test": "c8 npm run quick:test",
    "prebuild": "npm run lint && npm run clean",
    "build": "tsc",
    "postbuild": "npm run copy:templates && npm run index:commands",
    "release": "np",
    "version": "npm run build",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^6.1.3-25",
    "@adonisjs/core": "^6.1.5-29",
    "@adonisjs/eslint-config": "^1.1.8",
    "@adonisjs/lucid": "19.0.0-3",
    "@adonisjs/prettier-config": "^1.1.8",
    "@adonisjs/redis": "8.0.0-12",
    "@adonisjs/tsconfig": "^1.1.8",
    "@japa/assert": "2.0.1",
    "@japa/expect-type": "^2.0.0",
    "@japa/file-system": "^2.0.1",
    "@japa/runner": "^3.0.5",
    "@japa/snapshot": "^2.0.1",
    "@swc/core": "^1.3.96",
    "@types/node": "^20.8.10",
    "better-sqlite3": "^9.0.0",
    "c8": "^8.0.1",
    "copyfiles": "^2.4.1",
    "del-cli": "^5.1.0",
    "eslint": "^8.53.0",
    "ioredis": "^5.3.2",
    "luxon": "^3.4.3",
    "np": "^8.0.4",
    "p-event": "^6.0.0",
    "prettier": "^3.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@poppinss/utils": "^6.5.1",
    "bentocache": "1.0.0-beta.4"
  },
  "peerDependencies": {
    "@adonisjs/assembler": "^6.1.3-22",
    "@adonisjs/core": "^6.1.5-26",
    "@adonisjs/lucid": "19.0.0-3",
    "@adonisjs/redis": "8.0.0-12"
  },
  "peerDependenciesMeta": {
    "@adonisjs/assembler": {
      "optional": true
    },
    "@adonisjs/redis": {
      "optional": true
    },
    "@adonisjs/lucid": {
      "optional": true
    }
  },
  "author": "adonisjs, Julien Ripouteau",
  "license": "MIT",
  "keywords": [
    "adonisjs",
    "cache",
    "caching",
    "bentocache"
  ],
  "eslintConfig": {
    "extends": "@adonisjs/eslint-config/package"
  },
  "prettier": "@adonisjs/prettier-config",
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "np": {
    "message": "chore(release): %s",
    "tag": "latest",
    "branch": "main",
    "anyBranch": false
  },
  "c8": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  }
}

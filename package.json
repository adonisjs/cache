{
  "name": "@adonisjs/cache",
  "description": "Official caching module for AdonisJS framework",
  "version": "1.0.0-3",
  "engines": {
    "node": ">=18.16.0"
  },
  "main": "build/index.js",
  "type": "module",
  "files": [
    "build",
    "!build/bin",
    "!build/tests",
    "!build/test_helpers"
  ],
  "exports": {
    ".": "./build/index.js",
    "./types": "./build/src/types.js",
    "./commands/*": "./build/commands/*.js",
    "./commands": "./build/commands/main.js",
    "./services/main": "./build/services/main.js",
    "./cache_provider": "./build/providers/cache_provider.js"
  },
  "scripts": {
    "clean": "del-cli build",
    "copy:templates": "copyfiles \"stubs/**/*.stub\" build",
    "typecheck": "tsc --noEmit",
    "index:commands": "adonis-kit index build/commands",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "quick:test": "node --enable-source-maps --loader=ts-node/esm bin/test.ts",
    "pretest": "npm run lint",
    "test": "c8 npm run quick:test",
    "prebuild": "npm run lint && npm run clean",
    "build": "tsc",
    "postbuild": "npm run copy:templates && npm run index:commands",
    "release": "npx release-it",
    "version": "npm run build",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.7.0",
    "@adonisjs/core": "^6.12.0",
    "@adonisjs/eslint-config": "^1.3.0",
    "@adonisjs/lucid": "21.1.0",
    "@adonisjs/prettier-config": "^1.3.0",
    "@adonisjs/redis": "8.0.1",
    "@adonisjs/tsconfig": "^1.3.0",
    "@japa/assert": "3.0.0",
    "@japa/expect-type": "^2.0.2",
    "@japa/file-system": "^2.3.0",
    "@japa/runner": "^3.1.4",
    "@japa/snapshot": "^2.0.5",
    "@swc/core": "^1.6.3",
    "@types/node": "^20.14.5",
    "better-sqlite3": "^11.0.0",
    "c8": "^10.1.2",
    "copyfiles": "^2.4.1",
    "del-cli": "^5.1.0",
    "eslint": "^8.57.0",
    "ioredis": "^5.4.1",
    "luxon": "^3.4.4",
    "p-event": "^6.0.1",
    "prettier": "^3.3.2",
    "release-it": "^17.3.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.4.5"
  },
  "dependencies": {
    "bentocache": "1.0.0-beta.9"
  },
  "peerDependencies": {
    "@adonisjs/assembler": "^7.0.0",
    "@adonisjs/core": "^6.2.0",
    "@adonisjs/lucid": "^20.0.0 || ^21.0.0",
    "@adonisjs/redis": "^8.0.0"
  },
  "peerDependenciesMeta": {
    "@adonisjs/redis": {
      "optional": true
    },
    "@adonisjs/lucid": {
      "optional": true
    }
  },
  "author": "adonisjs, Julien Ripouteau",
  "license": "MIT",
  "keywords": [
    "adonisjs",
    "cache",
    "caching",
    "bentocache"
  ],
  "eslintConfig": {
    "extends": "@adonisjs/eslint-config/package"
  },
  "prettier": "@adonisjs/prettier-config",
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(release): ${version}",
      "tagAnnotation": "v${version}",
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "releaseName": "v${version}",
      "web": true
    }
  },
  "c8": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  }
}
